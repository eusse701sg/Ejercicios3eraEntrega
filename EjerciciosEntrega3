Clase Pitágoras
package appmenus;


public class Pitagoras {
    public static double calcular_hipotenusa(double catetoa, double catetob){
    double hipotenusa;
    hipotenusa = Math.sqrt(Math.pow(catetoa,2)+Math.pow(catetob,2));
    return hipotenusa;
    }           
}
Clase Resistencia
package appmenus;

public class Resistencia {
    public static double calcular_resistencia(double voltaje, double corriente){
        double resistencia;
        resistencia = voltaje/corriente;
        return resistencia;
    }
}
